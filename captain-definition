  "schemaVersion": 2,
  "dockerfileLines": [
    "FROM nginx:alpine",
    "WORKDIR /usr/share/nginx/html",
    "RUN rm -rf ./*",
    "ADD https://api.github.com/repos/jdamboeck/losamigos/git/ref/heads/main",
    "RUN apk add --no-cache git && \\",
    "    git clone https://github.com/jdamboeck/losamigos . && \\",
    "    git pull && \\",
    "    apk del git",
    "EXPOSE 80",
    "CMD [\"nginx\", \"-g\", \"daemon off;\"]"
  ]
}
